<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarItem1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorRed">
        <!--neu muom yje ke 1 toolbar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButtonSearchItem"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorRed"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/editTextSearchItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorRed"
                android:layout_toRightOf="@+id/imageButtonSearchItem"
                android:fontFamily="monospace"
                android:hint="Nhập mã sản phẩm . . . "
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButtonBackItem"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorRed"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_exit" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="8dp"
            android:maxLines="1"
            android:fontFamily="monospace"
            android:imeOptions="actionNext"
            android:layout_width="0dp"
            android:textColor="@color/colorBlack"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:hint="Mã"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textAllCaps="false" />
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/edID"
            android:maxLines="1"
            android:fontFamily="monospace"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:hint="Mã sản phẩm"
            android:textSize="20dp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_margin="8dp"
            android:hint="Tên"
            android:textSize="15dp"
            android:textAllCaps="false" />
        <TextView
            android:id="@+id/edAddNameProduct"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/colorRed"
            android:hint="Tên Sản Phẩm: "
            android:textSize="20dp"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_margin="8dp"
            android:hint="Địa chỉ "
            android:textSize="15dp"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/editTextAddressUser"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/colorRed"
            android:hint="Địa chỉ "
            android:textSize="20dp"
            android:textAllCaps="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_margin="8dp"
            android:textColor="@color/colorBlack"
            android:hint="Số lượng"
            android:textSize="15dp"
            android:textAllCaps="false" />
        <Spinner
            android:id="@+id/spinnerQuantityOrder"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:hint="Nhập Số Lượng Mua"
            android:textSize="25dp"
            android:textAllCaps="false" />
    </LinearLayout>



    <Button
        android:id="@+id/btOder"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text=" Đặt mua sản phẩm "
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@drawable/bg_btn_activity_login"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="20dp"/>

</LinearLayout>