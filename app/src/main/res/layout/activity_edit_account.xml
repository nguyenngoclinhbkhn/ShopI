<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarEditAccount"
        android:background="@color/colorRed">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:text="Chỉnh sửa thông tin"
                android:textColor="@color/colorWhite"
                android:textSize="22dp"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:fontFamily="monospace"/>
            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:id="@+id/imageButtonBackEditAccount"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:src="@drawable/ic_action_exit"
                android:background="@color/colorRed" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imageViewEditAccount"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="160dp"
        android:layout_margin="10dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photo_camera"
        android:id="@+id/takePhotoUser"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="8dp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:text="Tên "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNameAccountDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:text="Linhstorm"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Tài khoản"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTextUserNameAccountDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:maxLines="1"
                android:textSize="20dp"
                android:fontFamily="monospace"
                android:layout_weight="4"
                android:textColor="@color/colorBlue"
                android:gravity="center_vertical"
                android:text="Linhstorm"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:text="Mật khẩu"
                android:paddingLeft="8dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPassAccountDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="4"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:fontFamily="monospace"
                android:text="Linhstorm"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="So dien thoai"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPhoneAccountDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_weight="4"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:text="0123124"
                android:fontFamily="monospace"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Hủy"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="@drawable/background_btn_activity_login"
                android:id="@+id/btnCancelEditAccount"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:fontFamily="monospace"
                android:text="Lưu"
                android:textAllCaps="false"
                android:id="@+id/btnSaveEditAccount"
                android:background="@drawable/background_btn_activity_login"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>